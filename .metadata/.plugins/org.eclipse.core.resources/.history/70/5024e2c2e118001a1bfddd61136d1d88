package com.java.questions;

public class HourGlassProgram {

	public static void main(String[] args) {
		// OWn
		int n = 7;
		for (int i = n; i >= 1; i--) {
			for (int j = i; j >= 1; j--) {
				System.out.print(j + "\t");
			}
			System.out.println(" ");
		}
//		for (int j2 = n; j2 >= n; j2++) {
//			System.out.print(" ");
//		}

//		for (int i = 1; i <= 7; i++) {
//			for (int j = 1; j <= i; j++) {
//				System.out.print(j + "\t");
//			}
//			System.out.println(" ");
//		}
	}

}
